<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset hidden="true" name="list_templates_modal" repeat="true">
		<field name="source_type" type="radio" default="1" label="Источник данных" description="Выберите источник данных для слайда" required="true" class="btn-group">
			<option value="image">Изображение</option>
			<option value="youtube">Видео Youtube</option>
			<option value="editor">HTML-код</option>
		</field>
		<field name="image" showon="source_type:image" type="media" label="Изображение" description="Выберите изображение для слайда" directory=""/>
		<field name="youtube" showon="source_type:youtube" type="text" default="" label="Видео" description="Введите код видео с Youtube. Внимание! Код вводится без доменного имени." filter="raw"/>
		<field name="editor" showon="source_type:editor" type="editor" label="Введите содержимое слайда" description="Здесь может быть любой html-код. Полезно использовать для слайдера псевдоотзывов и других сложных блоков" rows="5" filter="safehtml"/>

		<field name="slide_title" type="text" default="" label="MOD_WEDAL_JOOMLA_SLIDER_HEADER" description="MOD_WEDAL_JOOMLA_SLIDER_HEADER_DESC" filter="raw"/>
		<field name="slide_desc" type="textarea" default="" label="MOD_WEDAL_JOOMLA_SLIDER_TEXT" description="MOD_WEDAL_JOOMLA_SLIDER_TEXT_DESC" rows="1" cols="5" filter="safehtml"/>
		<field name="behavior" type="radio" default="1" label="Действие при клике" description="Выберите действие, которое произойдет ри клике по слайду" requied="true" class="btn-group" required="true">
			<option value="none">Нет</option>
			<option value="golink">Переход по ссылке</option>
			<option value="modal">Открытие во всплывающем окне</option>
		</field>
		<field name="slide_link" showon="behavior:golink" type="text" default="" label="Ссылка для перехода" description="Введите ссылку для перехода" filter="raw"/>
		<field name="readmore_editor" showon="source_type:editor[AND]behavior:modal" type="editor" label="Содержимое всплывающего окна" description="Здесь может быть любой html-код." rows="5" filter="safehtml"/>

	</fieldset>
</form>
